# Environment Configuration for Agile Mantis Frontend
# Copy this file to .env.development and .env.production and fill in the values

# API Configuration
VITE_API_BASE_URL=https://mantis-api.azurewebsites.net/api

# Application Information
VITE_APP_NAME=Agile Mantis
VITE_APP_VERSION=1.0.0

# Auth0 Configuration (update when Auth0 is implemented)
VITE_AUTH0_DOMAIN=dev-lh142qwqyl47tou0.us.auth0.com
VITE_AUTH0_CLIENT_ID=your-auth0-client-id
VITE_AUTH0_AUDIENCE=https://your-api.com/api
VITE_AUTH0_REDIRECT_URI=http://localhost:5173/callback

# Development Settings
VITE_ENVIRONMENT=development
VITE_LOG_LEVEL=debug
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_DEBUG_LOGS=true

# Feature Flags
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_CHAT=true

# Build Settings
VITE_BUILD_TARGET=development